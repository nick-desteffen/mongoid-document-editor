<div class="section header">
  <div class="container clear">
    <h1 class='logo'><%= @klass.name.pluralize %></h1>
  </div>
</div>

<table>
  <thead>
      <tr>
        <% Mongoid::DocumentEditor.index_for(@klass).each_pair do |header, config| %>
          <td><%= header.to_s.humanize %></td>
        <% end %>
          <td>Actions</td>
      </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <% Mongoid::DocumentEditor.index_for(@klass).each_pair do |header, config| %>
          <td><%= document.send(header) %></td>
        <% end %>
        <td><%= link_to "Edit", edit_document_path(@klass, document) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
